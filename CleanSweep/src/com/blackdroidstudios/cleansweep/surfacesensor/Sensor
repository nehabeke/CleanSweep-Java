package com.blackdroidstudios.cleansweep.surfacesensor;

import com.blackdroidstudios.cleansweep.map.Tile.floorType;
import com.blackdroidstudios.cleansweep.map.Tile.tileType;

class Sensor implements SurfaceSensor{
	private SurfaceTile current;
	private SurfaceTile previous;
		
	Sensor(SurfaceTile current){
		this.current = current;
		this.previous = null;
	}
	
	public int getCurrent() {return getValue(current.getFloorType());}
	
	public int getPrevious() {return getValue(previous.getFloorType());}
	
	public int getNorth() {return getValue(current._neighbors[0].getFloorType());}
	
	public int getSouth() {return getValue(current._neighbors[1].getFloorType());}
	
	public int getEast() {return getValue(current._neighbors[2].getFloorType());}
	
	public int getWest() {return getValue(current._neighbors[3].getFloorType());}
	
	public void setCurrent(SurfaceTile s) {
		this.current = s;
	}
	
	public void setNeighbor(SurfaceTile s){
		this.current.addNeighbour(s);
	}

	/**
	 * FILL THIS IN!!!!!!!!!
	 */
	public void registerMove(int x, int y) {
		// TODO Auto-generated method stub
		
	}
	
	int getValue(floorType t){
		if(t == floorType.ChargingStation){return 5;}
		if(t == floorType.Plain){return 1;}
		if(t == floorType.LowCarpet){return 2;}
		if(t == floorType.HighCarpet){return 3;}
		else{return -1;}
	}
	
	
}

